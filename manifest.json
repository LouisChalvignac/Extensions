{
  "manifest_version": 3,
  "name": "Cleaner Web",
  "version": "1.0",
  "description": "Permet de masquer des éléments sur les pages et de gérer les sites nettoyés.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_title": "Cleaner",
    "default_popup": "hello.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
